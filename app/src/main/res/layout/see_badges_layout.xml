    <Button
      android:id="@+id/close"
      android:layout_width="160dp"
      android:layout_height="52dp"
      android:layout_marginLeft="40dp"
      android:layout_marginRight="24dp"
      android:padding="16dp"
      android:text="Cancel"

      android:background="#f45246"
      android:textColor="@android:color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@id/add_badge"/>

    <Button
      app:layout_constraintLeft_toRightOf="@id/close"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:id="@+id/add_badge"
      android:padding="16dp"
      android:layout_marginLeft="24dp"
      android:layout_marginRight="24dp"
      android:layout_width="160dp"
      android:layout_height="wrap_content"
      android:background="#f45246"
      android:textColor="@android:color/white"
      android:text="Add a badge"/>
    <TextView
      android:id="@+id/textview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:text="Badges Earned"
      android:textAlignment="center"
      android:textColor="@android:color/black"
      android:textSize="24sp"/>

    <ImageView
      android:layout_width="@id/scout_recycled_badges"
      android:layout_height="@id/scout_recycled_badges"
      app:layout_constraintLeft_toLeftOf="@id/scout_recycled_badges"
      app:layout_constraintRight_toRightOf="@id/scout_recycled_badges"
      app:layout_constraintTop_toTopOf="@id/scout_recycled_badges"
      app:layout_constraintBottom_toBottomOf="@id/scout_recycled_badges"
      android:background="#000"/>

