<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".view.MainFragment"
  android:background="@drawable/ic_background">

  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/badge_button"
    android:layout_width="68dp"
    android:layout_height="68dp"
    android:layout_marginBottom="18dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:background="@drawable/ic_bsa"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="@id/badge_button"
    app:layout_constraintLeft_toLeftOf="@id/badge_button"
    android:paddingRight="20dp"
    android:text="Badges"/>


  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/scout_button"
    android:layout_marginBottom="18dp"
    android:layout_width="68dp"
    android:layout_height="68dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:paddingLeft="16dp"
    android:src="@drawable/ic_jack"

    />


  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="@id/scout_button"
    app:layout_constraintLeft_toLeftOf="@id/scout_button"
    android:paddingLeft="8dp"
    android:text="Scouts"/>

</android.support.constraint.ConstraintLayout>